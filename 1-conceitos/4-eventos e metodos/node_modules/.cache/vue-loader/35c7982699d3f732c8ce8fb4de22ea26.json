      <button\n                @click=\"remove(task)\"\n            >&times;</button>\n        </li>\n    </ul>\n    <p v-else>Lista de tarefas escondidas</p>\n  </div>\n</template>\n\n<script>\n    const focus = {\n        inserted: (e) =>{\n            e.focus()\n        }\n    }\n    export default {\n        directives:{\n            focus\n        },\n\n        data:()=>({\n            showList:false,\n            tasks:[\n                {name:'Fazer o curso de Vue.js', isDone:false}\n            ]\n        }),\n\n        methods:{\n            handleShowHideList(){\n                this.showList = !this.showList \n            },\n            complete(task){\n                this.tasks = this.tasks.map(t =>{\n                    if(t.name === task.name){\n                        return{...t, isDone:!t.isDone}                 \n                    }\n                    return{...t}\n                })\n            },\n            remove(task){\n                this.tasks = this.tasks.filter(t => t.name !== task.name)\n            }\n        }\n    }\n</script>\n\n<style>\n    .line-through{\n        text-decoration: line-through;\n    }\n    .task-item{\n        cursor: pointer;\n    }\n</style>"]}]}